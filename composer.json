{
    "require": {
        "flightphp/core": "^3.17",
        "symfony/dotenv": "^7.4",
        "flightphp/container": "^1.3"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.4",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "post-autoload-dump": [
            "php -r \"if (!file_exists('.env')) copy('.env.example', '.env');\""
        ],
        "serve": "php -S localhost:61001 -t public",
        "format": "phpcbf"
    },
    "autoload": {
        "psr-4": {
            "RECHARGE\\": "app"
        }
    }
}
